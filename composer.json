{
  "name":              "pma/password-encoder-bundle",
  "description":       "This Bundle offers an Encoder for the Symfony-Security-System which combines various hash algorithms for secure passwords",
  "keywords":          [
    "encoder",
    "security",
    "symfony",
    "hash",
    "password"
  ],
  "type":              "symfony-bundle",
  "support":           {
    "issues": "https://github.com/pmarien/PasswordEncoderBundle/issues"
  },
  "license":           "MIT",
  "authors":           [
    {
      "name":  "Philipp Marien",
      "email": "philipp.marien@gmail.com",
      "role":  "Developer"
    }
  ],
  "minimum-stability": "stable",
  "require":           {
    "php":                          ">=5.3",
    "symfony/security":             ">=2.3",
    "symfony/config":               ">=2.2",
    "symfony/dependency-injection": ">=2.2",
    "symfony/http-kernel":          ">=2.2"
  },
  "require-dev":       {
    "phpunit/phpunit": ">=4.0"
  },
  "autoload":          {
    "psr-4": {
      "Pma\\PasswordEncoderBundle\\": ""
    }
  }
}
